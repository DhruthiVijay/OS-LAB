#include <stdio.h>

int main() {
    int frames, pages[50], n, frame[10], i, j, k, lru[10], least, count = 0, flag1, flag2;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter the page reference string:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    for(i = 0; i < frames; i++) {
        frame[i] = -1;
        lru[i] = 0;
    }

    printf("\nPage\tFrames\t\tPage Fault\n");

    for(i = 0; i < n; i++) {
        flag1 = flag2 = 0;

        for(j = 0; j < frames; j++) {
            if(frame[j] == pages[i]) {
                lru[j] = i;  // Update LRU
                flag1 = flag2 = 1;
                break;
            }
        }

        if(flag1 == 0) {
            for(j = 0; j < frames; j++) {
                if(frame[j] == -1) {
                    frame[j] = pages[i];
                    lru[j] = i;
                    count++;
                    flag2 = 1;
                    break;
                }
            }
        }

        if(flag2 == 0) {
            least = 0;
            for(j = 1; j < frames; j++) {
                if(lru[j] < lru[least])
                    least = j;
            }
            frame[least] = pages[i];
            lru[least] = i;
            count++;
        }

        printf("%d\t", pages[i]);
        for(j = 0; j < frames; j++) {
            if(frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        printf(flag2 ? "\tYes\n" : "\tNo\n");
    }

    printf("\nTotal Page Faults = %d\n", count);
    return 0;
}
